---
import "animate.css"
import "@fontsource-variable/inter";
import interWoff2 from "@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  class?: string
}

const { title, ...props } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta
      name="keywords"
      content="fastforward, fast, forward, fast forward, adskip, skip, ad, skip ad, adblock, linkvertise, extension, chrome, opera, how do i block, how to block, wait for ad, not wait for ad, universal, universal bypass, bypass, bypass ads, icallnadddjmdinamnolclfjanhfoafe, adf.ly, adfly, show.co, showco, show, sub2unlock.com, sub2unlockcom, bit.ly ,bitly, t.co, tco"
    />
    <meta
      name="description"
      content='Don&apos;t waste time with compliance. Use FastForward to skip annoying URL "shorteners".'
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta name="theme-color" content="#0a0a0a" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={interWoff2}
      crossorigin
    />

    <meta property="og:title" content="Home" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fastforward.team" />
    <meta property="og:image" content="img/branding.png" />
    <meta property="og:site_name" content="FastForward" />
    <meta
      property="og:description"
      content='Don&apos;t waste time with compliance. Use FastForward to skip annoying URL "shorteners".'
    />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@FastForwardTeam" />
    <meta name="twitter:title" content="FastForward" />
    <meta
      name="twitter:description"
      content='Don&apos;t waste time with compliance. Use FastForward to skip annoying URL "shorteners".'
    />
    <meta name="twitter:image" content="img/branding.png" />
